{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}

    <section class=" logcard">
        <div class="headlog">
            <p class="logtitle">Bonjour !</p>
            <p class="logp"><strong>Connectez-vous pour découvrir toutes les fonctionnalités.</strong></p>
        </div>

        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}

            <div class="">

                <div class="flexlabellog">
                    <label for="inputEmail">Email</label>
                </div>

                <div class="flexinputlog">
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control inputbgc inputlog" autocomplete="email" required autofocus>
                </div>

                <div class="flexlabellog">
                    <label for="inputPassword">Mot de passe</label>
                </div>

                <div class="flexinputlog">
                    <input type="password" name="password" id="inputPassword" class="form-control inputbgc inputlog" autocomplete="current-password" required>
                </div>

                <input type="hidden" name="_csrf_token"
                    value="{{ csrf_token('authenticate') }}"
                >
                <div class="flexinputlog padbtnlog">
                    <button class="bouton bouton_orange boutonS " type="submit">
                        Connexion
                    </button>
                </div>

                <div class="flexendlog">
                    <p><strong>Envie de nous rejoindre ?&nbsp;&nbsp;</strong></p>
                    <a href="{{ path('app_register')}}" class="linkendlog">Créer un compte</a>
                </div>

            </div>
        </form>

    </section>
            <img src="/assets/illustrations/connection.png" width="50%" class="pnglog" alt="welcome">
{% endblock %}
