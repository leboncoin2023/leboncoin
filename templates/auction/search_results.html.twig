{% extends 'base.html.twig' %}

{% block title %}Lebon<code> | Résultats de la recherche{% endblock %}

{% block body %}


<section class="container">

            <div class="d-flex category mt-3">
                <h1 class="h_one_cat h3">Les résultats contenant <strong>"{{ keyword }}"</strong></h1>
            </div>

            <div class="d-flex flex-wrap mt-2 mb-5">
                {% for keyword, auction in results %}
                    {% if loop.index <= 12 %}
                        <!--<div class="col-3 d-flex my-4 mx-2">-->
                            <a class="col-3 m-3 cardlink" href="{{ path('app_auction_detail', {'id': auction.id}) }}">
                                <div class="cardlbc">
                                    {% if auction.pictures is empty %}
                                        <div class="card-img-top cardimglbc"> </div>
                                    {% else %}
                                        <div class="card-img-top cardimglbc">
                                            <img src="/uploads/pictures/{{ auction.pictures[0] }}" class="img_card_auction_search" alt="image de l'enchère">
                                        </div>                               
                                    {% endif %}
                                    <div class="row card-body justify-content-between">
                                        <div class="col-8 search_card_title">
                                            {# Limiter l'affichage du titre sur 25 caractères max #}
                                            <span class="cat-card-title card_search text-start">{{ auction.title|length > 25 ? auction.title|slice(0, 25) ~ '...' : auction.title }}</span>
                                        </div>
                                        <div class="col-4 d-flex justify-content-end align-items-center">
                                            <img src="/assets/icones/coeurs/coeur_vide_gris.svg" alt="coeur">
                                        </div>
                                    </div>
                                </div>
                            </a>
                    {% endif %}
                {% endfor %}   
            </div>



        </section>
{% endblock %}


