{% extends 'base.html.twig' %}

{% block title %}Lebon<code> | Détail de l'enchère{% endblock %}

    {% block stylesheets %}
            <link rel="stylesheet" href="https://unpkg.com/leaflet@1.5.1/dist/leaflet.css" integrity="sha512-xwE/Az9zrjBIphAcBb3F6JVqxf46+CDLwfLMHloNu6KEQCAWi6HcDUbeOfBIptF7tcCzusKFjFw2yuvEpDL9wQ==" crossorigin=""/>
    {% endblock %}

{% block body %}

 <main>



        <article>
            <div class="container">
                <div class="row">
                    <div class="col-12 col-md-8">
            
        <!-- FIL D'ARIANE -->
            <div class="col-11 mt-3">
                <span class="h_one_sub_cat">Accueil > Ventes aux enchères > {{ dauction.category }} > {#{{ dauction.subcategory }} >#} </span>
            </div>            
        <!-- FIL D'ARIANE -->

            <!-- catalogue de photos -->
                <div class="row my-5">

                            {% if dauction.getPictures|length > 0 %}
                             {% for picturePath in dauction.getPictures %}
                                {% if loop.index <= 4 %}
                                    <div class="col-5 img_auction m-2 p-0">
                                        <img src="{{ asset('uploads/pictures/' ~ picturePath) }}" class="cropped3 m-2" alt="Photo de l'enchère">
                                    </div>
                                {% endif %}
                            {% endfor %}
                            {% else %}
                                <div class="col-5 card-img-lbc_detail m-2">
                                    <p>Aucune image disponible</p>
                                </div>
                            {% endif %}
                        <!--
                        <div class="col-6 voir_plus">
                            <a href="#">
                                <img src="/assets/icones/fleches/fleche_voirplus.svg" alt="fleche voir plus">
                                <p>Voir plus</p>   
                            </a>
                        </div>
                        -->
                </div>
            <!-- catalogue de photos -->






                        <div class="d-flex flex-column">
                            <div>
                                <h1 class="text-start">{{ dauction.title }}</h1>
                            </div>
                            <!--  <div>
                                <p>Annonce publiée le: xxxxxxx</p>
                            </div>-->
                        </div>


                        <hr>

                        <div>
                            <h2 class="mb-3">Description</h2>
                            <div>
                                <p>{{ dauction.description }}</p>
                            </div>
                        </div>

                        <hr> <!--   CRITERES  -->

                        <div>
                            <h2 class="mb-5">Critères</h2>
                                <div class="d-flex flex-row">
                                    <div class="col-4 d-flex flex-column">
                                        <div class="d-flex mb-5">
                                            <img src="/assets/icones/criteres/critere_etat.svg" class="me-2" alt="etat">
                                            <span>État :</span>
                                        </div>
                                        <div class="d-flex mb-1">
                                            <img src="/assets/icones/criteres/criteres_couleur.svg" class="me-2" alt="Couleur">
                                            <span>Couleur :</span>
                                        </div>
                                    </div>

                                    <div class="col-4 d-flex flex-column mb-4">
                                        <div class="d-flex mb-5">
                                            <img src="/assets/icones/criteres/critere_marque.svg" class="me-2" alt="marque">
                                            <span>Marque :</span>
                                        </div>

                                        <div class="d-flex mb-1">
                                            <img src="/assets/icones/criteres/criteres_stockage.svg" class="me-2" alt="Stockage">
                                            <span>Stockage :</span>
                                        </div>

                                    </div>

                                    <div class="col-4 d-flex flex-column mb-4">
                                        <div class="d-flex mb-5">
                                            <img src="/assets/icones/criteres/critere_marque.svg" class="me-2" alt="Modèle">
                                            <span>Modèle :</span>
                                        </div>
                                    </div>
                                </div>
                        </div>
                        
                        <hr> <!--  REMIS EN MAIN PROPRE -->

                        <div>
                            <h2 class="mb-5">Remise en main propre avec paiement sécurisé</h2>
                            <div class="d-flex flex-row align-content-between">
                                <div class="d-flex flex-column align-items-center">
                                    <img src="/assets/icones/badge_certif/badge_certif_euro.svg" class="icon_liv mx-2" alt="badge_certif">
                                    <img src="/assets/icones/information/smiley.svg" class="icon_liv2 mx-2" alt="smiley">
                                </div>

                                <div class="d-flex flex-column">
                                    <span class="mx-5 my-1">Restez libre de refuser ce bien s’il ne correspond pas à vos attentes</span>
                                    <span class="mx-5 my-2">Réservez ce bien jusqu’au rendez-vous avec le vendeur</span>
                                </div>
                            </div>
                            <div class="mt-3 mb-5">
                                <a href="#" class="link-liv" >Comment ça marche ?</a>
                            </div>
                        </div>

                        <hr> <!--  MODE DE LIVRAISON -->

                        <div>

                            <h2 class="mb-5">Livraison : {{ dauction.deliveryMode }}</h2>
                            <p>Recevez ce bien à domicile ou a deux pas de chez vous</p>
                            
                            <div class="d-flex flex-row">
                            
                                    <div class="d-flex flex-column align-items-center mx-3 me-5">
                                        <div class="d-flex flex-row mb-3">
                                            <div>
                                                <span class="fw-bolder me-2">Mondial Relay</span>
                                            </div>
                                            <div>
                                                <img src="/assets/icones/rs_livraison/mondialrelay.svg" alt="logo Mondial Replay">
                                            </div>
                                        </div>
                                        <span class="subtitle">En point Mondial Relay</span> 
                                        <span class="subtitle mb-3">sous 3-5 jours</span>
                                    </div>

                                    <div class="d-flex flex-column align-items-center mx-3">
                                        <div class="d-flex flex-row mb-3">
                                            <div>
                                                <span class="fw-bolder me-2">Chronopost</span>
                                            </div>
                                            <div>
                                                <img src="/assets/icones/rs_livraison/chronopost.svg" alt="logo Chronopost">
                                            </div>
                                        </div>
                                        <span class="subtitle">En point Pickup</span> 
                                        <span class="subtitle mb-3">sous 3-5 jours</span>
                                    </div>
                            </div>

                        </div>

                        <hr> <!--  PROTECTIONS -->

                        <div class="mb-5">
                            <h2 class="mb-5">Protection leboncoin</h2>
                            <div class="d-flex flex-row align-content-between">
                                <div class="d-flex flex-column align-items-center">
                                    <img src="/assets/icones/badge_certif/badge_certifie_noir.svg" class="icon_liv mx-2" alt="badge_certif">
                                    <img src="/assets/icones/information/team.svg" class="icon_liv2 mx-2" alt="icone team">
                                </div>

                                <div class="d-flex flex-column">
                                    <span class="mx-5 my-1">Votre argent est sécurisé jusqu’à la confirmation de récupération de l’article</span>
                                    <span class="mx-5 my-2">Une équipe dédiée à votre service</span>
                                </div>
                            </div>
                            <div class="mt-3 mb-5">
                                <a href="#" class="link-liv">Plus d’informations sur le paiement sécurisé</a>
                            </div>
                        </div>

                        <hr> 

                <!--  MAPS  -->
                    
                        <div class="map_frame">
                            <div>
                                <h2 class="mt-2 mb-5">Adresse de retrait</h2>
                            </div>
                            <div class="d-flex align-items-center mb-2 ms-3">
                                <div>
                                    <img src="/assets/icones/localisation/localisation_noir.svg" class="icon_liv mx-2" alt="badge_certif">
                                </div>
                                <span id="address_input">{{ dauction.localisation }}</span>
                            </div>
                            <div class="mb-2 d-flex map_input">
                                <div id="maCarte"></div>
                            </div>
                        </div>

                <!--  MAPS  -->


                    </div>

                    <aside class="col-12 col-md-4">

                    <!--  DETAIL VENDEUR  -->
                        <div class="card_border_top mt-5 p-3">
                            <div class="d-flex flex-column align-items-center mt-4">
                                <div class="d-flex flex-row">
                                    <div class="col-4 justify-content-center me-1">
                                        <img src="/assets/icones/profil/profil_cercle_certif.svg" alt="photo de profil">
                                    </div>
                                    <div class="d-flex flex-column ms-2">
                                        <div class="d-flex col-8 align-items-center">
                                            <h2>{{ seller.username }}</h2>
                                        </div>
                                        <div class="d-flex justify-content-center">
                                            <span>7 annonces</span>
                                        </div>
                                        <div class="d-flex flex-row mb-2 justify-content-center">
                                            <div>
                                                <img src="/assets/icones/etoile/etoile_orange.svg" alt="Étoiles">
                                                <img src="/assets/icones/etoile/etoile_orange.svg" alt="Étoiles">
                                                <img src="/assets/icones/etoile/etoile_orange.svg" alt="Étoiles">
                                                <img src="/assets/icones/etoile/etoile_orange.svg" alt="Étoiles">
                                                <img src="/assets/icones/etoile/demi_etoile_orange.svg" alt="Étoiles">
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                
                            </div>
                       
                            <div class="d-flex flex-row tps_restant align-items-center my-4">
                                <div class="d-flex col-2 justify-content-center">
                                    <img src="/assets/icones/timer/chrono_noir.svg" alt="timer">
                                </div>
                                <div class="col-10 d-flex align-items-center">
                                    <span class="rep_gen">Répond généralement dans les 6 heures</span>
                                </div>
                            </div>

                            

                            <div class="d-flex flex-column align-items-center my-3">
                                <div class="col-6 m-2 mb-5 d-flex justify-content-center">
                                    <button class="bouton bouton_orangeoutline boutonL" href="#">Message</button>
                                </div>
                                <div class="col-6 d-flex detail_vend justify-content-center">
                                    <a href="#">Détails vendeur</a>
                                </div>
                            </div>
                          
                        </div>
                    <!--  DETAIL VENDEUR  -->

                    <!--  DETAIL ENCHERE  -->

                        <div class="card_border_bot mt-4 p-3 text-center">

                            <div class="d-flex flex-row tps_restant align-items-center my-4">
                                <div class="col-2 d-flex justify-content-center">
                                    <img src="/assets/icones/marteau/marteau_orange_M.svg" alt="enchères">
                                </div>
                                <div class="col-10 d-flex align-items-center">
                                    <span class="rep_gen">La vente se termine dans 00:30 minutes</span>
                                </div>
                            </div>

                            <div class="my-4">
                                <h2>Enchère actuelle :</h2>
                                <span class="h3">{{ CurrentValue}}€</span>
                            </div>

                            <form method="POST">
                                <div class="my-4">
                                    <span>Votre offre :</span>
                                    <div class="input-group auction_proposed">
                                        <input name="offre" type="text" class="form-control"
                                            aria-label="Dollar amount (with dot and two decimal places)">
                                        <span class="input-group-text">€</span>
                                    </div>
                                </div>

                                <div>
                                    <div class="form-check my-4 d-flex justify-content-center">
                                        <input class="form-check-input me-2" type="checkbox" value="" id="flexCheckDefault">
                                        <label class="form-check-label" for="flexCheckDefault">M’alerter en cas de nouvelle enchère</label>
                                    </div>
                                </div>

                                <div class="mb-5">
                                    <input class="bouton bouton_orange boutonS" type="submit" value="Valider">
                                </div>
                            </form>
                        </div>

                    <!--  DETAIL ENCHERE  -->


                    </aside>
                </div>
            </div>


        </article>


<!--  DETAIL PROFIL VENDEUR  -->
        <section class="container">
            <div class="col-12 col-md-8">
                <hr>
                <div class="d-flex flex-row ms-3 align-items-start">
                    <div class="col-1 justify-content-center me-1">
                        <img src="/assets/icones/profil/profil_cercle_certif.svg" alt="photo de profil">
                    </div>

                    <div class="col-11 d-flex flex-column ms-2 align-items-start">
                        <div>
                            <h2>{{ seller.username }}</h2>
                        </div>
                        <div>
                            <span>7 annonces</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="my-4">
                <span class="fw-bolder">Membre depuis janvier 2023</span>
            </div>

            <div class="d-flex flex-row tps_restant align-items-center my-4">
                <div class="d-flex justify-content-start">
                    <img src="/assets/icones/timer/chrono_noir.svg" alt="timer">
                </div>
                <div class="d-flex justify-content-start">
                    <span class="rep_ft">Répond généralement dans les 6 heures</span>
                </div>
            </div>
            <div class="my-4 link-auction">
                <a href="#">Voir les annonces d'Antoine</a>
            </div>
            <div class="d-flex flex-row mb-5">
                <div class="d-flex me-5">
                    <div class="me-2">
                        <img src="/assets/icones/information/drapeau.svg" alt="drapeau signaler">
                    </div>
                    <div>
                        <sapn>Signaler l'annonce</span>
                    </div>
                </div>

                <div class="d-flex">
                    <div class="me-2">
                        <img src="/assets/icones/information/information.svg" alt="icone information">
                    </div>
                    <div>
                        <span>Vos droits et obligations</span>
                    </div>
                </div>
            </div>
    <!--  DETAIL PROFIL VENDEUR  -->
        </section>

    </main>


{% endblock %}

