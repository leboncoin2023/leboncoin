                    <div>

                        <div class="flexstepright">
                            <div class="flexstepright">
                                <input type="checkbox" name="" id="">
                                <p><strong>Mondial Relay</strong></p>
                            </div>
                            <p><strong>10,99 €</strong></p>
                        </div>

                        <p>En point Mondial Relay sous 3-5 jours</p>

                    </div>

                    {# CHRONOPOST #}
                    <div>
                    
                        <div class="flexstepright">
                            <div class="flexstepright">
                                <input type="checkbox" name="" id="">
                                <p><strong>Chronopost</strong></p>
                            </div>
                            <p><strong>12,99 €</strong></p>
                        </div>

