{% extends 'base.html.twig' %}

{% block title %}Liste des enchères{% endblock %}

{% block body %}
    <h1>Liste des enchères</h1>

    {% if auctions is empty %}
        <p>Aucune enchère disponible pour le moment.</p>
    {% else %}
        <ul>
            {% for auction in auctions %}
                <li>
                    <h2>{{ auction.getTitle() }}</h2>
                    <p>Description : {{ auction.getDescription() }}</p>
                    <p>Prix de départ : {{ auction.getStartPrice() }} €</p>
                    <p>Catégorie : {{ auction.getCategory() }}</p>
                    <p>Date de début : {{ auction.getStartDate()|date('Y-m-d H:i:s') }}</p>
                    <p>Durée : {{ auction.getDuration() }} jours</p>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
