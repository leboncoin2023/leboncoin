      {% extends 'base.html.twig' %}

{% block title %}Récapitulatif de l'enchère{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="mt-5 mb-4">Récapitulatif de l'enchère</h1>

        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4 bg-orange text-black">
                    {% if auction.getPicture() is not null %}
                        <img src="{{ asset(auction.getPicture()) }}" class="card-img-top" alt="Photo de l'enchère">
                    {% endif %}
                    <div class="card-body">
                        <h2 class="card-title">{{ auction.getTitle() }}</h2>
                        <p class="card-text">Prix : {{ auction.getSoldPrice() }} €</p>
                        <p class="card-text">Mode de livraison : {{ auction.getDeliveryMode() }}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}                

